{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "declaration": false,
    "importHelpers": false,
    "alwaysStrict": true,
    "target": "ES2018",
    "module": "commonJS",
    "moduleResolution": "node",
    "lib": ["ES2018"],
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports":true,
    "baseUrl": ".",
    "rootDirs": [
      "lib",
      "src"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["index.js"]
}
